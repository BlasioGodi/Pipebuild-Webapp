@page
@model PipeBuild.Pages.ContactModel
@{
    ViewData["Title"] = "Contact Us";
    ViewData["Email"] = "info@pipebuild.co.ke";
    ViewData["Gmail"] = "pipebuildservices@gmail.com";
}

<section id="contact_one">
    <div class="container-fluid section-contacts bg-warning">
    </div>
</section>

<section id="contact_two">
    <div class="container-fluid section-contacts">
        <div class="row d-flex flex-wrap justify-content-center bg-body-tertiary">
            <div class="col-md-5 bg-blue shadow-lg px-5 py-5" style="min-height:40vh;">
                <form action="#" method="post" class="js-ajax-form mt-4">
                    <div class="row g-3">
                        <div class="col-md-12 mt-4 mx-2">
                            <h2>Just Say hello...</h2>
                            <p>Let us connect...</p>
                        </div>
                        <div class="col-field col-md-6">
                            <input type="text" class="form-control" placeholder="First name" aria-label="First name" name="firstname" id="firstname">
                        </div>
                        <div class="col-field col-md-6">
                            <input type="text" class="form-control" placeholder="Last name" aria-label="Last name" name="lastname" id="lastname">
                        </div>
                        <div class="col-field col-md-6">
                            <input type="email" class="form-control" placeholder="E-mail Address" aria-describedby="emailHelp" aria-label="Email Address" name="email" id="email" required>
                        </div>
                        <div class="col-field col-md-6">
                            <input type="number" class="form-control" placeholder="Phone No." aria-label="Contact" name="contact" id="contact">
                        </div>
                        <div class="col-field col-md-12"><textarea class="form-control" placeholder="Leave your message here..." aria-label="message" name="message" id="message" value=></textarea></div>
                        <div class="col-auto my-4">
                            <button type="submit" class="btn btn-primary bg-red-custom">Submit</button>
                        </div>
                    </div>
                </form>
            </div>
            <div class="col-md-7 bg-primary mx-0 px-0" style="min-height:40vh;">
                <div data-style="dream" class="bg-map">
                    <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d10051.140417271963!2d36.978290457901046!3d-1.2957891005911724!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x182f6cf04fa67455%3A0x683a23e0befabd8f!2sAirways%20Shoping%20Center!5e0!3m2!1sen!2ske!4v1678804200991!5m2!1sen!2ske"
                            title="google-map" width="1280" height="720" style="border:0" allowfullscreen loading="lazy"
                            referrerpolicy="no-referrer-when-downgrade"></iframe>
                </div>
            </div>
        </div>
    </div>
</section>

