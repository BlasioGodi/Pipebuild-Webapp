@page
@model PipeBuild.Pages.ContactModel
@{
    ViewData["Title"] = "Contact Us";
    ViewData["Email"] = "info@pipebuild.co.ke";
    ViewData["Gmail"] = "pipebuildservices@gmail.com";
}

<section id="contact_one">
    <div class="container-fluid section-contacts background-bg">
    </div>
</section>

<section id="contact_two">
    <div class="container-fluid section-contacts">
        <div class="row d-flex flex-wrap justify-content-center bg-body-tertiary">
            <div class="col-md-6 bg-blue shadow-lg px-5 py-5" style="min-height:40vh;">
                <form action="#" method="post" class="js-ajax-form mt-4">
                    <div class="row g-3">
                        <div class="col-md-12 mt-4 mx-2">
                            <h2>Just Say hello...</h2>
                            <p>Let us connect...</p>
                        </div>
                        <div class="col-field col-md-12 col-lg-6">
                            <input type="text" class="form-control" placeholder="First name" aria-label="First name" name="firstname" id="firstname">
                        </div>
                        <div class="col-field col-md-12 col-lg-6">
                            <input type="text" class="form-control" placeholder="Last name" aria-label="Last name" name="lastname" id="lastname">
                        </div>
                        <div class="col-field col-md-12 col-lg-6">
                            <input type="email" class="form-control" placeholder="E-mail Address" aria-describedby="emailHelp" aria-label="Email Address" name="email" id="email" required>
                        </div>
                        <div class="col-field col-md-12 col-lg-6">
                            <input type="number" class="form-control" placeholder="Phone No." aria-label="Contact" name="contact" id="contact">
                        </div>
                        <div class="col-field col-md-12 col-lg-12"><textarea class="form-control" placeholder="Leave your message here..." aria-label="message" name="message" id="message" value=></textarea></div>
                        <div class="col-auto my-4">
                            <button type="submit" class="btn btn-primary bg-red-custom">Submit</button>
                        </div>
                    </div>
                </form>
            </div>
            <div class="col-md-6 mx-0 px-0 google-map">
                <div data-style="dream" class="bg-map">
                    <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3988.848168952777!2d36.83765377576393!3d-1.2635418356033328!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x182f16e9e40c356f%3A0x72b6d4616a4173c6!2sFarm%20Practice%20International%2C%20Muthaiga%20Suites%2C%20Thika%20Rd%2C%20Nairobi!5e0!3m2!1sen!2ske!4v1686647568036!5m2!1sen!2ske" width="1280" height="720" 
                            style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
                </div>
            </div>
        </div>
    </div>
</section>

<section id="contact_three">
    <div class="container-fluid bg-red-custom">
        <div class="row">
            <div class="col-md-2"></div>
            <div class="col-md-8">
                <div class="row row-cols-1 row-cols-md-2 row-cols-lg-4 my-4">
                    <div class="col d-flex justify-content-center">
                        <div class="card bg-blue br-10 mx-2 my-2" style="min-width: 18rem; min-height:10rem;">
                            <div class="card-body text-center">
                                <h5 class="card-title"><i class="fa fa-clock-o" style="font-size:2.5rem;"></i></h5>
                                <p class="card-text-title">Business Hours:</p>
                                <p class="card-text">Mon-Fri...8a.m-5p.m</p>
                                <p class="card-text">Sat, Sun....Closed</p>
                            </div>
                        </div>
                    </div>
                    <div class="col d-flex justify-content-center">
                        <div class="card bg-blue br-10 mx-2 my-2" style="min-width: 18rem; min-height: 10rem;">
                            <div class="card-body text-center">
                                <h5 class="card-title"><i class="fa fa-phone" style="font-size: 2.5rem;"></i></h5>
                                <p class="card-text-title">Phone</p>
                                <p class="card-text">+254 (790) 491 222</p>
                                <p class="card-text">+254 (722) 743 529</p>
                            </div>
                        </div>
                    </div>
                    <div class="col d-flex justify-content-center">
                        <div class="card bg-blue br-10 mx-2 my-2" style="min-width: 18rem; min-height: 10rem;">
                            <div class="card-body text-center">
                                <h5 class="card-title"><i class="fa fa-envelope" style="font-size: 2.5rem;"></i></h5>
                                <p class="card-text-title">Email</p>
                                <p class="card-text">@ViewData["Email"]</p>
                                <p class="card-text">@ViewData["Gmail"]</p>
                            </div>
                        </div>
                    </div>
                    <div class="col d-flex justify-content-center">
                        <div class="card bg-blue br-10 mx-2 my-2" style="min-width: 18rem; min-height: 10rem;">
                            <div class="card-body text-center">
                                <h5 class="card-title"><i class="fa fa-map-marker" style="font-size: 2.5rem;"></i></h5>
                                <p class="card-text-title">Location</p>
                                <p class="card-text">Muthaiga Suites, Block 2</p>
                                <p class="card-text">Muthaiga, Thika Road</p>
                                <p class="card-text">Nairobi, Kenya</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-2"></div>
        </div>
        
    </div>
</section>
